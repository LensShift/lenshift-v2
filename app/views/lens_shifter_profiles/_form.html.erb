<lens-shifter-profile-form inline-template>
<%= simple_form_for(@lens_shifter_profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name, wrapper_html: {class: 'column small-12 medium-6 no-padding-left'} %>
    <%= f.input :last_name, wrapper_html: {class: 'column small-12 medium-6 no-padding-right'} %>
    <%= f.input :birthdate, as: :date, html5: true %>
    <%= f.input :location, input_html: { 'v-model': "location", 'v-on:keyup.down': "getLocation"} %>
    <%= f.input :sector %>
    <%= f.input :referral %>
    <%= f.input :comment %>
    <%= f.input :contact_consent, label: "Keep me updated about LensShift by subscribing me to LensShift's newsletter" %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
  {{location}} <br />
  {{locationRes}}
<% end %>


</lens-shifter-profile-form>