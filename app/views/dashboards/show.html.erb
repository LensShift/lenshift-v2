<div class="grid-x grid-margin-x">
  <div class="cell small-12 medium-12 large-12">
    <h1>My Dashboard</h1>
      <div class="grid-x grid-margin-x">
        <div class="cell small-12 medium-6 large-6 medium-offset-1 large-offset-1">
        <p>
          <h3>Profile</h3>
          <p><b>Name:</b> <%= @profile.first_name %>
          <%= @profile.last_name %></p>
          <p><b>Birthday: </b><%= @profile.birthdate %></p>
          <p><b>Ethnicity: </b><%= @profile.ethnicity %></p>
          <p><b>Location: </b><%= @profile.location %></p>
          <p><b>Sector: </b><%= @profile.sector %></p>
          <p><b>Referral: </b><%= @profile.referral %></p>
          <p><b>Comments: </b><%= @profile.comment %></p>
          <p><%= @profile.contact_consent ? 'Do ' : 'Do Not ' %>contact me</p>
        </p>

        <%= link_to 'Edit Profile', edit_profile_path(@profile) %> |
        <%= link_to "Change password", edit_lens_shifter_registration_path %>
          <% if current_lens_shifter.try(:admin?) %> |
            <%= link_to 'All Resources', fellow_resource_items_path %> |
            <%= link_to 'Add Resource', new_fellow_resource_item_path %> |
            <%= link_to 'Google Drive', import_google_fellow_resource_items_path %> |
            <%= link_to 'Export CSV', export_csv_fellow_resource_items_path(format: 'csv') %> |
            
            <div class="inline-form">
              <%= form_tag import_csv_fellow_resource_items_path, multipart: true do %>
                <%= file_field_tag :file, class: "show-for-sr" %>
                <%= submit_tag "Import Resources", class: 'button small' %>
              <% end %>
            </div>
          <% end %>

        </div>
        <div class="cell small-12 medium-4 large-4">
          <% if @profile.avatar.present? %>
            <%= image_tag @profile.avatar_url, :alt => 'profile avatar' %>
          <% else %>
            <div class="avatar"><%= link_to image_tag(current_lens_shifter.profile.avatar.url(:avatar), :alt => 'profile image', :title => current_lens_shifter.full_name), dashboard_path %></div>
          <% end %>
        </div>
      </div>
  </div>
</div>
