<div class="grid-x grid-margin-x">
	<div class="cell small-12 medium-12 large-12">
	
		<h1>Practical Guides Library</h1>
		<%= link_to 'New Guide', new_fellow_guide_path, class: 'button' %> 
		
		<table>
	        <thead>
	          <tr>
	            <th>Title</th>
	            <th>Published</th>
	            <th>LS Author</th>
	            <th></th>
	            <th></th>
	          </tr>
	        </thead>

	        <tbody>
				<% @guides.each do |guide| %>
					<tr>
						<td><%= guide.title %></td>
						<td><%= guide.published_at %></td>
						<td><%= guide.lens_shifter.full_name %></td>
						<td><%= link_to 'Edit', edit_fellow_guide_path(guide.id) %></td>
						<td><%= delete_button_to 'Delete', fellow_guide_path(guide), data: {confirm: 'Are you sure?'}, class: 'button table-button alert' %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>