<% set_meta_tags title: 'Sign in LensShift', description: 'LensShifter sign in page', keyword: 'Site, Sign in, Members, LensShifter',
	og: {
        title: 'Sign in LensShift',
        url: 'https://www.lensshift.org/lens_shifter/sign_in'
      },
     twitter: {
        card: 'Sign in to LensShift',
        site: 'LensShift',
      } %>

	<div class="row align-center">
		<div class="column small-12 medium-8 large-6">
			<h2>Sign in</h2>

			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			  <div class="form-inputs">
			    <%= f.input :email, required: false, autofocus: true %>
			    <%= f.input :password, required: false %>
					<%= f.invisible_captcha :subtitle %>
			    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
			  </div>

			  <div class="form-actions">
			    <%= f.button :submit, "Log in" %>
			  </div>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
	</div>
