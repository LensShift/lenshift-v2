  <% set_meta_tags og: {
        title: @page_title,
        url: guides_url,
      }, twitter: {
        card: @page_title,
        site: 'LensShift',
      } %>

<div class='grid-x grid-padding-x'>
    <div class="small-12 medium-12 large-12 cell">
      <h1>Practical Guide</h1>
      <div class="small-12 medium-8 large-8 cell">
      <p class="lead">Our compact practical guides distill the learnings from our library and streams into bite-size references that can be tangibly applied in daily work and conversations.</p>
    </div></div>
    <% if @guides.size < 1 %>
	    <div class="small-12 medium-12 large-12 cell">
	    	<b><i>Our guides are coming soon, be sure to check back to download these guides!</i></b>
	    </div>
    <% else %>
	    <div class="small-12 medium-12 large-12 cell">
	    	<% @guides.each do |guide| %>
		    	<div class="small-12 medium-10 large-10 cell guide-container">
		    		<div class="grid-x">
		    			<div class="small-12 medium-3 large-3 cell">guide.image.url</div>
		    			<div class="small-12 medium-9 large-9 cell">
		    				<h3>guide.title</h3>
		    				<p>guide.description</p>
		    				<p>
			    				<% @resource_item.tag_list.each do |tag| %>
		        					<span class="label secondary"><%= tag %></span>
		      					<% end %>
	      					</p>
		    				<%= link_to 'download here', guide.file.url %>
		    			</div>
		    		</div>
		    	</div>
	    	<% end %>
	    </div>
    <% end %>


</div>