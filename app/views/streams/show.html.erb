<stream-show inline-template>
	<div class="row">
		<%  set_meta_tags og: {
				title: @page_title,
				url: stream_url(@stream_id),
				image: @stream_image_url
			}, twitter: {
				card: @page_title,
				site: 'LensShift',
			}, image_src: @stream_image_url %>
	    <div class="column small-12 medium-12 large-12">
	    	<h1>{{stream.title}}</h1>
	    	<p class="lesson-paragraph">{{stream.description}}</p>
	    
		</div>		
	   	<div class="column small-12 medium-12 large-9">
    		<div class="tabs">
    			<div v-for="(lesson, index) in lessons" :class="['tabs-hover','tabs-title', activeLessonIndex === index ? 'lesson-is-active' : '' ]" :id="'tab' + index" v-on:click="showLesson(lesson, index, lesson.id)"><strong><small>Lesson {{index + 1}}</small></strong></div>
    		</div>
    		<br />
    		<br class="clr" />
    	</div>
    	
    	<div class="column small-12 small-order-2 medium-12 medium-order-2 large-9 large-order-1 lesson-container">
    		<i v-if="resourceLoading" class="fa fa-circle-o-notch fa-spin loading" style="font-size:90px;"></i>
    		<div v-if="!resourceLoading">
	    		<h4 v-if="currentLesson">Lesson: {{currentLesson.title}}</h4>
		    	<div class='lesson-glance'>

		    		<h5>At a Glance</h5>
					<p v-if="currentLesson" class="lesson-paragraph"> {{currentLesson.analysis}}</p>
				</div>
				
				<stream-resource :resource="currentResource"></stream-resource>
			</div>
		</div>
		<div class="column small-12 small-order-1 medium-6 medium-order-1 large-3 large-order-2">
	        <div class="resource-syllabus-frame-head">Resources</div>
	      	<div class="resource-syllabus-frame">
	        	<div v-for="(resource, index) in resources" :class="['resource-syllabus-item', activeResourceIndex === index ? 'resource-is-active' : '']" v-on:click="showResource(index)"><small>{{resource.title}}</small></div>
	      	</div>
    	</div>


		    
	</div>
</stream-show>
