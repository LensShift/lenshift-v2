<contact-form inline-template>
	<div class="row align-center">
		<div class="column small-12 medium-8 large-8">
			<h1>Contact Us</h1>
			<div v-for="note in notice" class="call-out warning">{{note}}</div>
			<i v-if="loading" class="fa fa-circle-o-notch fa-spin loading" style="font-size:90px;"></i>
			<form v-if="!loading && !submitted" submit.prevent="submitQuery">
				<input type="text" v-model="query.name" placeholder="name" @focus="notice = null" />
				<input type="text" v-model="query.email" placeholder="email*" @focus="notice = null" />
				<input type="text" v-model="query.subject" placeholder="subject" @focus="notice = null" />
				<textarea v-model="query.message" placeholder="your awesome thoughts here" class="short-summary-text" @focus="notice = null" ></textarea>
				<button class="button" v-on:click.prevent="submitQuery">Submit</button>
			</form>
			<div v-if="submitted">
				<br />
				<br />
				<h3>Thank you!</h3>
				<p class="lead">Thank you for taking the time to contact us. We really appreciate that you have reached out to us.</p>
				<p class="lead">We will get back to you as soon as possibe!</p>
			</div>
		</div>
	</div>
</contact-form>