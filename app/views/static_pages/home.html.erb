<% set_meta_tags title: 'LensShift', description: 'The hub for shifting narratives around social impact.', keyword: 'social impact, lens shift, international devleopment, community', og: {
        title: 'LensShift',
        url: 'https://www.lensshift.org/',
      }, twitter: {
        card: 'Sign up to LensShift',
        site: 'LensShift',
      }, image_src: "https://www.lensshift.org/assets/lensshift_beta_logo_black.png" %>

<div class="grid-x">
	<div class="cell small-12 medium-12 large-12">
		<div class="hero">
			<div class="hero-content">
				<p class="hero-heading">Passionate about social impact done right?</p>

				<p class="hero-heading-secondary">Join Us!</p>
				
				<%= link_to 'Sign Up Now', new_lens_shifter_registration_path, class: "button" %>
			</div>
		</div>
		<div class="secondary-call">
			The hub for shifting narratives around social impact.
		</div>

		<div class="homepage-line">
		<hr class="turqoise-line" />
		<hr class="orange-line" />
		</div>
		
		<div class="row feature-row">
			<div class="column small-12 medium-4 large-4 feature-column">
				<%= image_tag 'library.png', alt: "resource library icon", class: "landing-icon" %>
				<h5>Library</h5>
				<p>Our Library brings together an ever-growing collection of LensShift-curated resources including articles, videos, podcasts, infographics, and more.</p>
			</div>
			<div class="column small-12 medium-4 large-4 feature-column">
				<%= image_tag 'stream.png', alt: "resource library icon", class: "landing-icon" %>
				<h5>Streams</h5>
				<p>These structured Streams walk LensShifters through 15-20 resources from the Library to unpack topics fundamental to challenging mainstream narratives.</p>
			</div>
			<div class="column small-12 medium-4 large-4 feature-column">
				<%= image_tag 'guide.png', alt: "resource library icon", class: "landing-icon" %>
				<h5>Practical Guides</h5>
				<p>Practical Guides distill the knowledge from our Library and Streams into bite-size references that can be tangibly applied in daily work and conversations.</p>
			</div>
		</div>
		<hr />
		<div class="row feature-row align-center align-middle">
			<div class="column small-12 medium-6 large-6 feature-column align-center">
				<h4>Launching at TEDxOxford</h4>
				<p>Our beta site was launched at <%= link_to 'TEDxOxford', "http://www.tedxoxford.co.uk/" %> on March 4, 2018. <br /> Exciting day! Now you can watch our TEDx talk here</p>
				<iframe width="560" height="315" src="https://www.youtube.com/embed/ns18b4LRXbM" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
			</div>
			<div class="column small-12 medium-6 large-6 feature-column align-center">
				<div>
				<h4>Recruiting Social Media Wizard</h4>
				<p>Are you passionate about making a difference and believe that social media can play a part? <br />We are looking for a Communications & Social Media Fellow. <br />
					<span class="is-orange"><b>Deadline: 27 July, 2018</b></span>
					<%= link_to 'more info here', 'https://lensshift.s3.us-east-2.amazonaws.com/uploads/document/file/7/LensShift_Communication___Social_Media_fellowship_announcement.pdf', target: "_blank" %>
				</p>
				<%= image_tag 'social_media.svg', :class => 'social-image'  %>
				
				</div>
			</div>
		</div>
		<hr />
		<div class="row feature-row">
			<div class="column small-12 medium-6 large-6">
				<!-- Begin MailChimp Signup Form -->
                <div id="mc_embed_signup">
                    <form action="https://lensshift.us11.list-manage.com/subscribe/post?u=9421dbba72fa382fde69f3e0b&amp;id=6f0517aa91" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                     	<div id="mc_embed_signup_scroll">
                        	<h4 class="text-center">Subscribe to our mailing list</h4>
                    		<div class="indicates-required"><span class="asterisk">*</span> indicates required</div>
                        <div class="mc-field-group">
                            <label for="mce-NAME">Name </label>
                            <input type="text" value="" name="NAME" class="" id="mce-NAME" placeholder="name">
                        </div>
                    	<div class="mc-field-group">
                        	<label for="mce-EMAIL">Email  *</label>
                       		<input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" placeholder="* email">
                    	</div>
                        <div id="mce-responses" class="clear">
                            <div class="response" id="mce-error-response" style="display:none"></div>
                            <div class="response" id="mce-success-response" style="display:none"></div>
                        </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                        <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_9421dbba72fa382fde69f3e0b_6f0517aa91" tabindex="-1" value=""></div>
                        	<div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
                        </div>
                    </form>
                </div>

                <!--End mc_embed_signup-->
			</div>
			<div class="column small-12 medium-6 large-6 text-center">
				<h4>Follow Us</h4>
				<div class="social-icon">
					<%= link_to 'https://www.facebook.com/lensshift/', target: "_blank" do %><i class="fa fa-facebook-official" aria-hidden="true"></i><% end %>
					<%= link_to 'https://twitter.com/lensshift_org', target: "_blank" do %><i class="fa fa-twitter-square" aria-hidden="true"></i><% end %>
				</div>
			</div>
		</div>
	</div>
</div>

